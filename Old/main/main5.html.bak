<script language="Javascript">


var timerID = null;
var timerRunning = false;

//Countdown to Kids-Fair 2000 March 17, 9:00 AM

function go()
{
  var now   = new Date();
  var month = now.getMonth();
  var day   = now.getDate();

  var hour  = now.getHours();
  var min   = now.getMinutes();
  var sec   = now.getSeconds();

  var day_diff;
  var hour_diff;
  var min_diff;
  var sec_diff=60-sec;

//Check if its after or before 00 minutes and save before or after

  if ((min-00) == 0)
         {  
          min_diff = 0;
      when_min = "before_min";
         }

  else

     {
      min_diff = (60-min);
          when_min = "after_min";
     }

//Check if its after or before 9:00am and save before or after

  if ((hour-9) < 0 && when_min=="before_min")    // before 9, before 00

         {
         hour_diff = 9-hour;
         when_hour = "before_hour";
         }

  else if ((hour-9) < 0 && when_min=="after_min")   // before 9, after 00

         { 
         hour_diff = (9-hour)-1;
         when_hour = "before_hour";
         }

  else if ((hour-9) > 0 && when_min=="after_min")  // after 9, after 00

         {
         hour_diff = (24-hour)+9;
         when_hour = "after_hour";
         }

  else if ((hour-9) > 0 && when_min=="before_min")  //after 9, before 00

         {
         hour_diff = 24-hour;
         when_hour = "after_hour";
         }

  else if ((hour-9) == 0 && when_min=="before_min")     // exactly 9, before 00

         {
         hour_diff = 0;
         when_hour = "before_hour";
         } 

  else if ((hour-9) ==0 && when_min=="after_min")      // exactly 9, after 00

         {
         hour_diff = (24-hour)-1;
         when_hour = "after_hour";
         }

  day_diff=17-day;

//if after 9:00am, subtract 1 from day 

  if(when_hour=="after_hour")
     day_diff=day_diff-1;

    document.forms[0].dayResult.value  = day_diff;
    document.forms[0].hourResult.value = hour_diff;
    document.forms[0].minResult.value  = min_diff; 
   timerID = setTimeout("go()",1000);
}

// Called by onLoad in body tag and Start Countdown button.
function startCountdown() 

   { 
   go();
   timerRunning = true;
   }

// Called by onUnload in body tag and Stop Countdown button.
function stopCountdown()

   {
   if(timerRunning)
      clearTimeout(timerID);
   timerRunning = false;
   }

